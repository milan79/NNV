                @Html.DisplayFor(modelItem => item.Datum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VrstaSednice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ucionica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zapisnik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Poziv)
            </td>
            <td>
                    @Html.ActionLink("Измени", "Edit", new { id=item.SednicaID }) |
                    @Html.ActionLink("Детаљи", "Details", new { id=item.SednicaID }) |
                    @Html.ActionLink("Обриши", "Delete", new { id=item.SednicaID})
