        <th>
            @Html.DisplayNameFor(model => model.Datum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VrstaSednice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ucionica)
